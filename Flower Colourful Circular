import turtle

def draw():
    colors = ["red","orange","yellow","green","blue","purple"]
    pen = turtle.Turtle()
    turtle.bgcolor("Black")

    for i in range(180):
        pen.color(colors[i % 6])
        pen.forward(200)
        pen.right(61)
        pen.forward(100)
        pen.right(123)
        pen.forward(100)
        pen.right(61)
        pen.forward(200)
        pen.right(181)
    pen.hideturtle()

draw()

turtle.done()
